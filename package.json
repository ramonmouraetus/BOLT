{
  "name": "bolt",
  "version": "3.0.2",
  "description": "Brius Optimized Lightweight Theme",
  "main": "index.js",
  "author": "Rafael Oliveira",
  "license": "Private",
  "dependencies": {
    "archiver": "^5.3.1",
    "del": "^6.0.0",
    "fs-extra": "^11.3.0",
    "install": "^0.13.0",
    "npm": "^11.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "babel-loader": "^9.1.2",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.1",
    "laravel-mix-zip": "^1.0.3",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "standard-version": "^9.3.2",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.1"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "release": "standard-version",
    "dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "watch-poll": "webpack --mode=development --watch --watch-options-poll=1000",
    "hot": "webpack serve --mode=development --hot",
    "build": "mix --production",
    "generate-zip": "node scripts/generate-zip.js",
    "build-zip": "npm run build && npm run generate-zip"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
